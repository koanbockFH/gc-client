<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_color"
    tools:context=".Login">

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@color/primary_color"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:padding="10dp">
        <!-- android:background="@drawable/round_edittext" -->


        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/confirmed_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="PLACEHOLDERNAME"
            android:textColor="@color/primary_color"
            android:textColorHint="@color/primary_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <!-- android:background="@drawable/round_edittext" -->


        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mail" />

        <TextView
            android:id="@+id/confirmed_mail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="PLACEHOLDER@MAIL"
            android:textColor="@color/primary_color"
            android:textColorHint="@color/primary_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lock"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/confirmed_password"
            android:hint="PLACEHOLDERPASSWORD"
            android:textColor="@color/primary_color"
            android:textColorHint="@color/primary_color"

            android:inputType="textPassword"
            />



    </LinearLayout>

    <Button
        android:id="@+id/btn_send_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="75dp"
        android:background="@drawable/round_button"
        android:layout_gravity="right"
        android:text="Send Mail"
        android:textColor="@color/white" />

</LinearLayout>